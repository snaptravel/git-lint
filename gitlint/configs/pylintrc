[FORMAT]

# Maximum number of characters on a single line.
max-line-length=120

# Regexp for a line that is allowed to be longer than the limit.
# We also allow declaration of url in string to be longer as it is useful for
# automatic linking.
ignore-long-lines=^\s*(# )?<?https?://\S+>?$|'https?://\S+'$

# Number of spaces of indent required inside a hanging or continued line.
indent-after-paren=2

# String used as indentation unit.
indent-string='  '

max-args=6

# https://stackoverflow.com/a/47147809
# List of class names for which member attributes should not be checked (useful
# for classes with dynamically set attributes). This supports the use of
# qualified names.
ignored-classes=SQLAlchemy,scoped_session,Query

disable=
    no-name-in-module,
    import-error,
    relative-import,
    invalid-name,
    too-many-arguments,
    too-many-locals,
    too-many-lines,
    too-many-instance-attributes,
    too-few-public-methods,
    too-many-public-methods,
    broad-except,
    no-member,
    too-many-local-variables,
    no-self-use,
    too-many-return-statements,
    too-many-boolean-expressions


[BASIC]

# Regular expression which should only match function or class names that do
# not require a docstring.
no-docstring-rgx=__.*__|.*Test|test_.*|_.*

# Minimum line length for functions/classes that require docstrings, shorter
# ones are exempt.
docstring-min-length=10


[MISCELLANEOUS]

notes=FIXME,TODO,XXX

good-names=setUpModule,tearDownModule,app,pool,i,j,k,ex,e,ip,ob,_,__,id,df
